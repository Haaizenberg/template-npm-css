{
    "name": "bootstrap4",
    "version": "1.0.0",
    "description": "Trying bootstrap4",
    "main": "index.js",
    "scripts": {
        "scss": "node-sass --output-style compressed -o public/css src/scss",
        "serve": "browser-sync start --server --files 'public/css/*.css, **/*.html'",
        "watch:css": "onchange 'src/scss' -- npm run scss",
        "dev": "run-p serve watch:css"
    },
    "author": "Dmitriiy Kustov",
    "license": "MIT",
    "devDependencies": {
        "browser-sync": "^2.27.7",
        "node-sass": "^7.0.1",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.1.0"
    }
}